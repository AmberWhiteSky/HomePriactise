<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_login_port"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_login_ip"
        android:layout_below="@+id/et_login_ip"
        android:layout_marginTop="40dp"
        android:text="8888"
        android:ems="10" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/et_login_port"
        android:layout_toLeftOf="@+id/et_login_port"
        android:text="端口号" />

    <EditText
        android:id="@+id/et_login_ip"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        android:text="10.10.100.254"
        android:ems="10" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_login_ip"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:text="登陸界面" />

    <Button
        android:id="@+id/button_login_tuoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_login_connect"
        android:layout_alignBottom="@+id/button_login_connect"
        android:layout_alignLeft="@+id/textView3"
        android:text="脱机登录" />

    <Button
        android:id="@+id/button_login_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_login_port"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="连       接" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/et_login_port"
        android:layout_alignLeft="@+id/textView3"
        android:text="设备IP:" />

</RelativeLayout>
